@echo off
call :find_dp0

if exist "%dp0%\node.exe" (
  set "_prog=%dp0%\node.exe"
) else (
  set "_prog=node"
  set "PATHEXT=%PATHEXT:;.JS;=;%"
)

if defined _prog (
  endlocal & title %comspec% & "%_prog%" "%dp0%\..\mime\cli.js" %*
) else (
  echo Error: node.exe not found in "%dp0%" nor in PATH.
  endlocal & exit /b 1
)

:find_dp0
set "dp0=%~dp0"
exit /b
