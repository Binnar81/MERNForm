{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "@ljharb"
  ],
  "plugins": ["react"],
  "rules": {
    "complexity": ["warn", 5],
    "id-length": ["warn", { "min": 2, "max": 30 }],
    "new-cap": ["error", { "capIsNewExceptions": ["GetIntrinsic"] }],
    "react/prop-types": "off"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [
    {
      "files": ["test/**/*.js"],
      "rules": {
        "max-lines-per-function": "off"
      }
    }
  ]
}
